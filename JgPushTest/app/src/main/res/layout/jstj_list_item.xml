<?xml version="1.0" encoding="utf-8"?>
<com.example.hjl.jgpushtest.myview.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/bg_gray"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jstj_tv5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="序号"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/jstj_tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="记录号"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/jstj_tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="锁号"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/jstj_tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="设备号"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/jstj_tv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="出厂批次"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/jstj_tv6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="锁状态"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.example.hjl.jgpushtest.myview.CheckableLinearLayout>