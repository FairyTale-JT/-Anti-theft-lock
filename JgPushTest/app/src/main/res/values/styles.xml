<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar颜色 -->
        <item name="colorPrimary">#061a9c</item>
        <!-- 状态栏的颜色 -->
        <item name="colorPrimaryDark">#061a9c</item>
        <!--试图框颜色设置-->
        <item name="android:windowBackground">@color/windowback</item>
        <!--修改toolbar弹出菜单的位置-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle1</item>
        <item name="colorAccent">#000</item>
        <!-- toolbar的主题-->
        <item name="toolbarStyle">@style/ClubToolbar</item>

        <!--&lt;!&ndash; 用于修改item默认的分割线&ndash;&gt;-->
        <!--<item name="android:dropDownListViewStyle">@style/dropDownStyle</item>-->
        <!--<item name="dropDownListViewStyle">@style/dropDownStyle</item>-->
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
    <!-- 设置该属性解决空白部分-->
    <item name="contentInsetStart">16dp</item>
    <item name="contentInsetEnd">10dp</item>
    </style>

<!--........................................-->
    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle1" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>

        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">#2a8c87</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-20dp</item>


    </style>
    <!--`````````````````````````````````````````````````-->
    <!--设置弹出菜单文字颜色-->
    <style name="menuTextColor" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>

    </style>
    <!--;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;-->
    <!--用于修改popmenu的分割线-->
    <style name="dropDownStyle" parent="android:style/Widget.Holo.ListView.DropDown">
        <!--<item name="android:listSelector">可添加选中背景颜色</item>-->
        <item name="android:divider">#908d8d8d</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <!-- loading 样式 -->
    <style name="loadstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dailogbk</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
